<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.restex.mapper.ExMapper">

    <select id="findById" parameterType="hashmap" resultType="hashmap">
        SELECT ID, NAME FROM ITEM WHERE ID = #{id}
    </select>

    <insert id="registerItem" parameterType="com.example.restex.dto.ItemDto">
        INSERT INTO ITEM(ID, NAME) VALUES( #{id}, #{name} )
    </insert>

</mapper>